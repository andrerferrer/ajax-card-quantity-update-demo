<li class='list-group-item' data-controller='product-card' data-product-card-id-value='<%= product_cart.id %>'>
  <div class="form-container">
    <div class="flex-between">
      <%= product_cart.meal.name %>

      <div class="actions">

        <% if product_cart.quantity > 1 %>
          <a class="btn round-bordered incrementer minus" data-offset="-1" data-action='click->product-card#update'>-</a>
        <% else %>
          <a class="btn round-bordered incrementer minus" data-action='click->product-card#destroy'>-</a>
        <% end %>

        <span id="counter"><%= product_cart.quantity %></span>
        <a class="btn round-bordered incrementer" data-offset="1" data-action='click->product-card#update'>+</a>
      </div>
    </div>
  </div>
</li>
