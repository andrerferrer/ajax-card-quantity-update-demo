<% if product_cart %>
  <li class='list-group-item' data-controller='product-card'>
    <div class="form-container">
      <div class="flex-between">
        <%= product_cart.meal.name %>

        <div class="actions">
          <a class="btn round-bordered incrementer minus" data-offset="-1">-</a>
          <span id="counter"><%= product_cart.quantity %></span>
          <a href="#" class="btn round-bordered incrementer" data-offset="1">+</a>
        </div>
      </div>
    </div>
  </li>
<% end %>
